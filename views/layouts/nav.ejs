<header class="header">
    <div class="nav">
        <div class="nav-left">
            <div class="nav-ipad">
                <i class="fas fa-bars" id="navbar-icon"></i>
                <div class="nav-ipad-container">
                    <div class="nav-ipad-user">
                        <img src="<%=user.avatar%>" alt="">
                    </div>
                    <div class="nav-ipad-item">
                        <i class="fas fa-home"></i>
                        Trang Chủ
                    </div>
                    <div class="nav-ipad-item">
                        <i class="fas fa-user"></i>
                        Trang Cá Nhân
                    </div>
                    <div class="nav-ipad-item logout">
                        <i class="fas fa-sign-out-alt"></i>
                        Đăng Xuất

                    </div>
                </div>
                <div class="nav-ipad-overlay"></div>
            </div>
            <a href="/" class="logo">
                <img src="https://res.cloudinary.com/dqrkqvtjg/image/upload/v1641437309/advanced-web/shortcut_ewsijw.png" alt="">
            </a>
        </div>
        <div class="nav-center">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Tìm người dùng..." id="search-input">
            <div class="search-list">
                <a class="user-search" href="">
                    <img src="./image/bang.jpg" alt="" class="image-34">
                    <span>
                        <%=user.name %>
                    </span>
                </a>
                <a class="user-search" href="">
                    <img src="./image/bang.jpg" alt="" class="image-34">
                    <span>Anh Khoa</span>
                </a>
            </div>
        </div>
        <div class="nav-right">
            <div class="user-group">
                <a href="/profile/<%=user._id%>"><img src="<%=user.avatar%>" alt=""></a>
                <div class="dropdown">
                    <i class="fas fa-sort-down"></i>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/profile/<%= user._id %>">
                                <i class="fas fa-user"></i>
                                Trang cá nhân
                            </a>
                        </li>
                        <% if (user.role == 1 || user.role == 2) { %>
                            <li>
                                <a href="/account/reset-password/<%= user._id %>">
                                    <i class="fas fa-key"></i>
                                    Đổi mật khẩu
                                </a>
                            </li>
                        <% } %>
                        <li class="logout">
                            <a href="/account/logout">
                                <i class="fas fa-sign-out-alt"></i>
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>