<%- include('./layouts/head.ejs') %>

    <body>
        <div class="form-wrapper">
            <div class="form">
                <div class="form-title">
                    Đổi mật khẩu
                </div>
                <form class="form-content" id="reset-password-form" method="POST">
                    <div class="form-group">
                        <label for="oldPassword">Mật khẩu cũ</label>
                        <input type="password" placeholder="Mật khẩu cũ..." name="oldPassword" id="oldPassword">
                        <i class="fas fa-eye eye"></i>
                    </div>
                    <div class="form-group">
                        <label for="newPassword">Mật khẩu mới</label>
                        <input type="password" placeholder="Mật khẩu mới..." name="newPassword" id="newPassword">
                        <i class="fas fa-eye eye"></i>
                    </div>
                    <div class="form-group">
                        <label for="reNewPassword">Nhập lại mật khẩu mới</label>
                        <input type="password" placeholder="Nhập lại mật khẩu mới..." name="reNewPassword"
                            id="reNewPassword">
                        <i class="fas fa-eye eye"></i>
                    </div>
                    <div class="error-text">Error Message</div>
                    <button type="submit">Xác nhận</button>
                </form>
            </div>
        </div>
        <div id="loading">
            <img src="/image/loading.svg" />
        </div>

    </body>

    <script src="/javascripts/main.js"></script>

    </html>