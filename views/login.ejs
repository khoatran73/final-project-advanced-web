<%- include('./layouts/head.ejs') %>

<body>
    <div class="form-wrapper">
        <div class="form">
            <div class="form-title">
                Đăng Nhập
            </div>
            <form class="form-content" id="login-form" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" placeholder="Nhập email" name="email" id="email">
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <input type="password" placeholder="Nhập mật khẩu" name="password" id="password">
                    <i class="fas fa-eye eye"></i>
                </div>
                <div class="error-text">Error Message</div>
                <button type="submit">Đăng nhập</button>
                <button type="button" id="gg-login-btn">Đăng nhập bằng email sinh viên</button>
            </form>
        </div>
    </div>
    <div id="loading">
        <img src="/image/loading.svg" />
    </div>
</body>

<script src="/javascripts/main.js"></script>

</html>